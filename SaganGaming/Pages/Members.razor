@page "/Members"

@using DataAccess
@using DataAccess.Repositorys
@using DataAccess.Repositorys.Interface
@using DataAccess.Models

@inject IMembersRepository _membersRepository

<h3>Members</h3>

@if (members == null || members.Count == 0)
{
    <p>This saga has no members yet!</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nick</th>
                <th>Name</th>
                <th>Born</th>
                <th>City</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in members)
            {
                <tr>
                    <td>@member.NickName</td>
                    <td>@member.FirstName @member.LastName</td>
                    <td>@member.DateOfBirth.Year</td>
                    <td>@member.City</td>
                    <td>@member.Country</td>
                    @if (member.Image != null)
                    {
                        <td><img src="data:image/jpeg;base64, @(Convert.ToBase64String(member.Image))" /></td>
                    }
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MembersModel> members;

    protected override async Task OnInitializedAsync()
    {
        members = await _membersRepository.GetAllMembers();
    }
}
